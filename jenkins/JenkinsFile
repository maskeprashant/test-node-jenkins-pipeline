pipeline{
    agent any

    triggers {
        pollSCM('H/5 * * * *') // Checks for changes every 5 minutes
    }

    options {
        skipDefaultCheckout(true)
    }

    stages{
        stage("Install Dependencies"){
             when {
                branch 'main'
            }
            steps{
                dir("test-node-jenkins-pipeline") {
                    sh "npm install"
                }
            }
        }
        stage("Build"){
            when {
                branch 'main'
            }
            steps{
                dir("test-node-jenkins-pipeline") {
                    sh "npm run build"
                }
            }
        }
        stage("Test"){
             when {
                branch 'main'
            }
            steps{
                dir("test-node-jenkins-pipeline") {
                    sh "npm run test"
                }
            }
        }
    }
    post {
    always {
      echo 'Cleaning up...'
    }
    failure {
      echo 'Build failed.'
    }
  }
}
